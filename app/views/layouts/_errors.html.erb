<% if object.errors.any? %>
    <div id="error_block">
        <h3><%= pluralize(object.errors.count, 'error') %>Your request could not be completed:</h3>
        <ul>
            <% object.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
        </ul>
    </div>
<% end %>